<h1>All Lists</h1>
<hr />

<%= link_to 'Create New List', new_list_path %>

<% if @lists.empty? %>
  <h3>No Lists Found, Please Create One!</h3>
<% else %>
  <ul>
    <% @lists.each do |list| %>
      <li>
        <%= link_to list.title, list_path(list)%>
        <span> - </span>
        <%= link_to 'Edit', edit_list_path(list[:id]) %>
        <span> - </span>
        <%= link_to 'Delete', list_path(list), method: :delete %>
      </li>
    <% end %>
  </ul>
<% end %>
